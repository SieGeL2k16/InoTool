{% extends 'InoSession.html.twig' %}
{% block body %}
<div class="container-fluid">
  <div class="row">
    <div class="col mb-5 mt-2">
      <h1 class="text-center">Willkommen {{ app.user.firstName }} {{ app.user.lastName }}</h1>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <button type="button" class="btn btn-outline-dark main_nav_buttons" onclick="window.location.href='{{ path("flm_index") }}'"><i class="fa-solid fa-hand-holding-dollar"></i><br>Freelancer Manager</button>
    </div>
    <div class="col text-center">
      <button type="button" class="btn btn-outline-dark main_nav_buttons" onclick="window.location.href='{{ path("km_index") }}'"><i class="fa-solid fa-bank"></i><br>Konto Manager</button>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col text-center">
      <button type="button" class="btn btn-outline-dark main_nav_buttons" onclick="window.location.href='{{ path("app_logout") }}'"><i class="fa-solid fa-right-from-bracket"></i><br>Abmelden</button>
    </div>
  </div>
</div>
{% endblock %}
