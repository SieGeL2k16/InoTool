{% extends 'InoFreelancerManager.html.twig' %}
{% block body %}
<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item active h3" aria-current="page"><i class="fa-solid fa-file-invoice-dollar fa-fw"></i> Rechnungen</li>
      </ol>
    </nav>
  </div>
</div>
<div class="row mb-2">
  <div class="col-auto">
    <button type="button" class="btn btn-primary" onclick="window.location.href='#'"><i class="fa-solid fa-plus"></i> Neue Rechnung erstellen</button>
  </div>
</div>
<div class="row">
  <div class="col-sm-12 table-responsive">
    <table class="table table-sm table-striped table-hover" id="tbl_fl_invoices">
      <thead class="table-light">
      <tr>
        <th>ID</th>
        <th>Rechnungsnr.</th>
        <th>Datum</th>
        <th>Kunde</th>
        <th>Rech. Art</th>
        <th>Betrag</th>
        <th class="text-center">Bezahlt?</th>
        <th class="text-center">PDF Dl.</th>
      </tr>
      </thead>
      <tbody class="table-group-divider">
      
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
{% block javascripts %}
  <script>
    var dtable  = $("#tbl_fl_invoices").DataTable({
      columnDefs: [
        {className: "td_edit", targets: [0,1,2,3,4,5,6]},
        //{className: "td_edit text-center", targets: [6]}
      ],
      "processing": true,
      'serverSide': true,
      ajax: {
        url: '{{ path("fl_invoices_ajax") }}',
/*
        "data": function (d)
          {
            d.F_ACTIVE = $('#f_active').val();
          }
*/
      },
      "stateSave": true,
      "stateDuration": 0,
      "fnInitComplete": function() {
        this.fnAdjustColumnSizing(true);
      },
    });

    // Handle click on table entry
    $('#tbl_fl_invoices tbody').on('click', 'td', function () {
      var data = dtable.cell(this).data();
      if (Array.isArray(data) === true)
        {
          return;
        }
      var row = dtable.row(dtable.cell(this).index().row).data();
      window.location.href=formurl+"/"+row[0];
    });

    /** React on active flag adjustment */
    $("#f_active").on('change', function() {
      dtable.ajax.reload(null,false);
    });
  </script>
{% endblock %}
