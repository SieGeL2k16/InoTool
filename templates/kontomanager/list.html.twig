{% extends 'InoKontoManager.html.twig' %}
{% block body %}
<div class="row">
  <div class="col-12">
    <div class="card-title h3">Konto√ºbersicht</div>
    <div class="table-responsive">
      <table class="table table-striped table-hover" id="tbl_account_data">
      <thead>
      <tr>
        <th>ID</th>
        <th>Datum</th>
        <th>Kategorie</th>
        <th>Buchungstext</th>
        <th>Summe</th>
        <th>Bank</th>
      </tr>
      </thead>
      </table>
    </div>
  </div>
</div>
{% endblock %}
{% block javascripts %}
<script>
  $(document).ready(function()
  {
    $("#tbl_account_data").dataTable({
      {% if app.request.locale !='en' %}
      "language": {
        "url": "{{ asset('js/datatables.' ~ app.request.locale ~ '.json') }}"
      },
      {% endif %}
      'serverSide': true,
      'order': [[1, 'desc']],
      ajax: {
        url: '{{ path("km_listAjax") }}',
        "data": function (d)
          {
          d.SD = $('#sd').val();
          d.ED = $('#ed').val();
          }
      },
      "stateSave": true,
      "stateDuration": 0,
    });
  });
</script>
{% endblock %}
